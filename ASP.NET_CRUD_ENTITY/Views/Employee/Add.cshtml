

@model ASP.NET_CRUD_ENTITY.Models.Employee

    <div id="addEmployeeModal" class="modal fade">
        <div class="modal-dialog">
            <div class="modal-content">
                <form id="addForm">
                    <div class="modal-header">
                        <h4 class="modal-title">Add Employee</h4>
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    </div>
                    <div class="modal-body">
                        <div class="form-group">
                            <label>Name</label>
                            @*<input id="EmployeeName" name="EmployeeName" type="text" class="form-control">*@
                            @Html.EditorFor(model => model.EmployeeName, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.EmployeeName)
                        </div>
                        <div class="form-group">
                            <label>Email</label>
                            @*<input id="employeeEmail" type="email" class="form-control">*@
                            @Html.EditorFor(model => model.EmployeeEmail, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.EmployeeEmail)
                        </div>
                        <div class="form-group">
                            <label>Address</label>
                            <textarea id="employeeAddress" class="form-control"></textarea>
                        </div>
                        <div class="form-group">
                            <label>Phone</label>
                            @*<input id="employeePhone" type="text" class="form-control">*@
                            @Html.EditorFor(model => model.EmployeePhone, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.EmployeePhone)
                        </div>
                    </div>
                    <div class="modal-footer">
                        <input type="button" class="btn btn-default" data-dismiss="modal" value="Cancel">
                        <input onclick="addOreditEmployee('0','0')" type="button" class="btn btn-success" value="Add">
                    </div>
                </form>
            </div>
        </div>
    </div>
